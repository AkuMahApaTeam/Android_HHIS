<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mrabid.hhis.Fragment.PasienFragment">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">



    <!--<ImageView-->
        <!--android:layout_width="@dimen/_230sdp"-->
        <!--android:layout_height="@dimen/_100sdp"-->
        <!--android:id="@+id/img_logo"-->
        <!--android:layout_marginTop="@dimen/_60sdp"-->
        <!--android:background="@drawable/image"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_centerHorizontal="true" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FIND YOUR HEALTH HISTORY"
            android:textStyle="bold"
            android:textSize="@dimen/_20sdp"
            android:id="@+id/judul"
            android:textColor="#000000"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="@dimen/_230sdp"
            android:layout_height="wrap_content"
            android:text="HHIS will help you to find and recorde your medical history ,HHIS help docters to find information on the patient medical history. Find your disease history just by input your ktp's / nik's number"
            android:textSize="@dimen/_10sdp"
            android:textAlignment="center"
            android:id="@+id/txt_biasa"
            android:textColor="@color/input_login_hint"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_below="@+id/judul"
            android:layout_centerHorizontal="true"/>


        <EditText
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:id="@+id/edt_cari"
            android:layout_below="@+id/txt_biasa"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:textColorHighlight="@color/bg_login"
            android:textSize="@dimen/_18sdp"
            android:hint="Search by KTP/NIK........"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_search_black_24dp"
            android:layout_alignTop="@+id/edt_cari"
            android:layout_toRightOf="@+id/edt_cari"
            android:layout_toEndOf="@+id/edt_cari"
            android:id="@+id/img_cari"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/txt_NAMA"
            android:layout_below="@+id/edt_cari"
            android:textStyle="bold" />

        <TextView
            android:padding="@dimen/_10sdp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/txt_result"
            android:layout_below="@+id/img_cari"
            android:layout_marginTop="@dimen/_10sdp"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rcy_pasien"
            android:layout_below="@+id/txt_NAMA">

    </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</ScrollView>
